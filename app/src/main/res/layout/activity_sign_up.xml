<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign.SignUpActivity">

    <TextView
        android:id="@+id/textIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/elM"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Имя пользователя"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_name"
        app:layout_constraintStart_toStartOf="@+id/edit_text_name"
        app:layout_constraintTop_toBottomOf="@+id/textIn"
        app:layout_constraintBottom_toTopOf="@id/edit_text_name"
        app:layout_constraintHorizontal_bias="0"/>

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_edit_text_style"
        android:paddingStart="10dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/elM"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/just_grey"
        android:text="Электронная почта"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_email_up"
        app:layout_constraintStart_toStartOf="@+id/edit_text_email_up"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_name"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_email_up"
        app:layout_constraintHorizontal_bias="0"/>

    <EditText
        android:id="@+id/edit_text_email_up"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elM"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_edit_text_style"
        android:paddingStart="10dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пароль"
        android:textColor="@color/just_grey"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_email_up"
        app:layout_constraintStart_toStartOf="@+id/edit_text_email_up"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_email_up"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_password_up"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edit_text_password_up"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_email_up"
        app:layout_constraintStart_toStartOf="@+id/edit_text_email_up"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_edit_text_style"
        android:paddingStart="10dp"
        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/up_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_password_up"
        android:background="@drawable/btn_sign_color"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/sign_in_click_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войти"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_password_up"
        app:layout_constraintStart_toStartOf="@+id/edit_text_password_up"
        app:layout_constraintTop_toBottomOf="@+id/up_btn"
        app:layout_constraintVertical_bias="0"
        android:textColor="@color/text_blue"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>