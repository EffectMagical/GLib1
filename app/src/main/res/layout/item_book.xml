    <ImageView
        android:id="@+id/book_cover_item"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:src="@drawable/comments"/>

    <TextView
        android:id="@+id/book_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_cover_item"
        app:layout_constraintBottom_toTopOf="@id/book_author_item"
        app:layout_constraintHorizontal_bias="0"
        android:text="fkfkfkfffffffffffffffffffffffffffffffffffff"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/book_author_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textSize="12sp"
        android:text="fjf fkfkkf"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_name_item"
        app:layout_constraintBottom_toTopOf="@+id/book_genres_item" />

    <TextView
        android:id="@+id/book_genres_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fjfflf, jjgjgjg"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_author_item"
        app:layout_constraintVertical_bias="0"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/dark_grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>