<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/book_cover_info"
        android:layout_width="180dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/home"/>

    <TextView
        android:id="@+id/text_v_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_cover_info"
        android:text="Название:"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_text_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_v_n"
        app:layout_constraintTop_toTopOf="@id/text_v_n"
        android:text="fjfkfkfkkfkfkfkf"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_v_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_name"
        android:text="Автор(-ы):"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_text_author"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_v_a"
        app:layout_constraintTop_toTopOf="@id/text_v_a"
        android:text="fjfkfkfkkfkfkfkf"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_v_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_author"
        android:text="Год написания:"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_text_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_v_y"
        app:layout_constraintTop_toTopOf="@id/text_v_y"
        android:text="1979"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_v_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_year"
        android:text="Жанры:"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edit_text_genres"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_v_g"
        app:layout_constraintTop_toTopOf="@id/text_v_g"
        android:text="fkfjflfklf"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_v_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_genres"
        android:text="Описание книги:"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_v_d"
        android:text="fkfjflfklf"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>